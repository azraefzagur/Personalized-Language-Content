<script>
  // NOTE: Charts used to rely on Chart.js CDN. In some student environments
  // internet/CDN access is blocked, causing empty charts. We draw charts
  // with a tiny local canvas renderer instead (no external deps).

  const attemptLabels = <?= json_encode($attemptLabels, JSON_UNESCAPED_UNICODE) ?>;
  const attemptTotals = <?= json_encode($attemptTotals, JSON_UNESCAPED_UNICODE) ?>;
  const attemptCorrect = <?= json_encode($attemptCorrect, JSON_UNESCAPED_UNICODE) ?>;
  const skillLabels = <?= json_encode($skillLabels, JSON_UNESCAPED_UNICODE) ?>;
  const skillAcc = <?= json_encode($skillAcc, JSON_UNESCAPED_UNICODE) ?>;

  function cssVar(name, fallback){
    const v = getComputedStyle(document.documentElement).getPropertyValue(name).trim();
    return v || fallback;
  }

  function fitCanvas(canvas){
    const dpr = window.devicePixelRatio || 1;
    const rect = canvas.getBoundingClientRect();
    const w = Math.max(10, Math.floor(rect.width));
    const h = Math.max(10, Math.floor(rect.height));
    canvas.width = Math.floor(w * dpr);
    canvas.height = Math.floor(h * dpr);
    const ctx = canvas.getContext('2d');
    ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
    return {ctx, w, h};
  }

  function drawAxes(ctx, w, h, pad, yMax){
    const border = cssVar('--border', 'rgba(0,0,0,.2)');
    const muted = cssVar('--muted', 'rgba(0,0,0,.55)');
    ctx.clearRect(0,0,w,h);
    ctx.lineWidth = 1;
    ctx.strokeStyle = border;
    // axes
    ctx.beginPath();
    ctx.moveTo(pad.l, pad.t);
    ctx.lineTo(pad.l, h - pad.b);
    ctx.lineTo(w - pad.r, h - pad.b);
    ctx.stroke();

    // y ticks (0, 50%, 100%)
    ctx.fillStyle = muted;
    ctx.font = '12px ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial';
    const ticks = 3;
    for(let i=0;i<ticks;i++){
      const frac = i/(ticks-1);
      const y = (h - pad.b) - frac * ((h - pad.b) - pad.t);
      const val = Math.round(frac * yMax);
      ctx.beginPath();
      ctx.moveTo(pad.l - 4, y);
      ctx.lineTo(pad.l, y);
      ctx.stroke();
      ctx.fillText(String(val), 6, y + 4);
    }
  }

  function drawLineSeries(ctx, w, h, pad, values, yMax, color){
    const n = values.length;
    if(n === 0) return;
    const x0 = pad.l;
    const x1 = w - pad.r;
    const y0 = h - pad.b;
    const y1 = pad.t;
    const step = n > 1 ? (x1 - x0) / (n - 1) : 0;

    ctx.lineWidth = 2;
    ctx.strokeStyle = color;
    ctx.beginPath();
    for(let i=0;i<n;i++){
      const x = x0 + i * step;
      const v = Number(values[i] || 0);
      const y = y0 - (yMax ? (v / yMax) : 0) * (y0 - y1);
      if(i===0) ctx.moveTo(x, y);
      else ctx.lineTo(x, y);
    }
    ctx.stroke();

    // Ensure even a single data point is visible.
    ctx.fillStyle = color;
    for(let i=0;i<n;i++){
      const x = x0 + i * step;
      const v = Number(values[i] || 0);
      const y = y0 - (yMax ? (v / yMax) : 0) * (y0 - y1);
      ctx.beginPath();
      ctx.arc(x, y, 3, 0, Math.PI*2);
      ctx.fill();
    }
  }

  function drawLegendLine(ctx, x, y, color, text){
    const textColor = cssVar('--muted', 'rgba(0,0,0,.55)');
    ctx.lineWidth = 3;
    ctx.strokeStyle = color;
    ctx.beginPath();
    ctx.moveTo(x, y);
    ctx.lineTo(x+18, y);
    ctx.stroke();
    ctx.fillStyle = textColor;
    ctx.font = '12px ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial';
    ctx.fillText(text, x+26, y+4);
  }

  function drawLineChart(canvas, labels, series){
    if(!canvas) return;
    const {ctx, w, h} = fitCanvas(canvas);
    const pad = {l: 40, r: 12, t: 12, b: 26};
    let yMax = 0;
    for(const s of series) for(const v of s.data) yMax = Math.max(yMax, Number(v||0));
    yMax = Math.max(1, yMax);
    drawAxes(ctx, w, h, pad, yMax);

    // x labels (show up to 6)
    const muted = cssVar('--muted', 'rgba(0,0,0,.55)');
    ctx.fillStyle = muted;
    ctx.font = '12px ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial';
    const x0 = pad.l;
    const x1 = w - pad.r;
    const n = labels.length;
    const maxLabels = 6;
    const stride = n <= maxLabels ? 1 : Math.ceil(n / maxLabels);
    for(let i=0;i<n;i+=stride){
      const x = n>1 ? x0 + (i/(n-1))*(x1-x0) : x0;
      ctx.fillText(String(labels[i]||''), Math.max(0, x-16), h - 8);
    }

    // series lines
    for(const s of series){
      drawLineSeries(ctx, w, h, pad, s.data, yMax, s.color);
    }

    // legend
    let lx = pad.l;
    const ly = pad.t + 10;
    for(const s of series){
      drawLegendLine(ctx, lx, ly, s.color, s.label);
      lx += 140;
    }
  }

  // Grouped bar chart for time series: Total vs Correct per period.
  function drawGroupedBarChart(canvas, labels, totals, corrects){
    if(!canvas) return;
    const {ctx, w, h} = fitCanvas(canvas);
    const pad = {l: 40, r: 12, t: 12, b: 26};

    const n = Math.max(1, labels.length);
    let yMax = 0;
    for(const v of totals) yMax = Math.max(yMax, Number(v||0));
    yMax = Math.max(1, yMax);

    drawAxes(ctx, w, h, pad, yMax);

    const x0 = pad.l;
    const x1 = w - pad.r;
    const y0 = h - pad.b;
    const y1 = pad.t;

    const groupW = (x1 - x0) / n;
    const gap = 4;
    const barW = Math.max(6, Math.min(22, groupW * 0.32));

    const totalColor = cssVar('--primary', '#134074');
    const correctColor = cssVar('--powder', '#8DA9C4');
    const text = cssVar('--muted', 'rgba(0,0,0,.55)');

    for(let i=0;i<labels.length;i++){
      const cx = x0 + i * groupW + groupW/2;
      const t = Math.max(0, Number(totals[i]||0));
      const c = Math.max(0, Number(corrects[i]||0));

      const th = (Math.min(yMax, t) / yMax) * (y0 - y1);
      const ch = (Math.min(yMax, c) / yMax) * (y0 - y1);

      // total (left)
      ctx.fillStyle = totalColor;
      ctx.fillRect(cx - gap/2 - barW, y0 - th, barW, th);

      // correct (right)
      ctx.fillStyle = correctColor;
      ctx.fillRect(cx + gap/2, y0 - ch, barW, ch);
    }

    // x labels (show up to 6)
    ctx.fillStyle = text;
    ctx.font = '12px ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial';
    const maxLabels = 6;
    const stride = labels.length <= maxLabels ? 1 : Math.ceil(labels.length / maxLabels);
    for(let i=0;i<labels.length;i+=stride){
      const cx = x0 + i * groupW + groupW/2;
      const lbl = String(labels[i]||'');
      ctx.fillText(lbl, Math.max(0, cx - 16), h - 8);
    }

    // legend
    drawLegendLine(ctx, pad.l, pad.t + 10, totalColor, 'Total');
    drawLegendLine(ctx, pad.l + 110, pad.t + 10, correctColor, 'Correct');
  }

  function drawBarChart(canvas, labels, values, yMax){
    if(!canvas) return;
    const {ctx, w, h} = fitCanvas(canvas);
    const pad = {l: 40, r: 12, t: 12, b: 40};
    yMax = Math.max(1, Number(yMax || 100));
    drawAxes(ctx, w, h, pad, yMax);
    const primary = cssVar('--primary', '#178582');
    const text = cssVar('--muted', 'rgba(0,0,0,.55)');

    const x0 = pad.l;
    const x1 = w - pad.r;
    const y0 = h - pad.b;
    const y1 = pad.t;
    const n = Math.max(1, labels.length);
    const groupW = (x1 - x0) / n;
    const gap = 10;
    const barW = Math.max(10, Math.min(60, Math.floor(groupW * 0.62)));

    for(let i=0;i<labels.length;i++){
      const v = Math.max(0, Math.min(yMax, Number(values[i]||0)));
      const bh = (v / yMax) * (y0 - y1);
      const x = x0 + i * groupW + (groupW - barW)/2;
      const y = y0 - bh;
      ctx.fillStyle = primary;
      ctx.fillRect(x, y, barW, bh);

      // value label
      ctx.fillStyle = text;
      ctx.font = '12px ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial';
      ctx.fillText(String(v) + '%', x + 4, Math.max(12, y - 6));

      ctx.fillStyle = text;
      const lbl = String(labels[i]||'');
      if(labels.length <= 4){
        ctx.fillText(lbl.length>14 ? (lbl.slice(0,13)+'‚Ä¶') : lbl, x, h - 10);
      } else {
        ctx.save();
        ctx.translate(x + Math.min(10, barW/2), h - 10);
        ctx.rotate(-0.35);
        ctx.fillText(lbl.length>14 ? (lbl.slice(0,13)+'‚Ä¶') : lbl, -10, 0);
        ctx.restore();
      }
    }
  }

  function renderAll(){
    drawGroupedBarChart(
      document.getElementById('chartAttempts'),
      attemptLabels,
      attemptTotals,
      attemptCorrect
    );
    drawBarChart(
      document.getElementById('chartSkill'),
      skillLabels,
      skillAcc,
      100
    );
  }

  window.addEventListener('resize', () => {
    // debounce-ish: redraw after layout stabilizes
    clearTimeout(window.__progressResize);
    window.__progressResize = setTimeout(renderAll, 120);
  });
  renderAll();
</script>
